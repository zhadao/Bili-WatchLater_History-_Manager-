{
  "manifest_version": 3,
  "name": "Bilibili 稍后再看 & 历史记录增强助手 (Bili-WatchLater_History-Manager)",
  "version": "1.4.0",
  "description": "在B站稍后再看列表中快速跳转到普通播放页",
  "author": "扎导ZhaDa0",
  "icons": {
    "16": "icons/icon16.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "content_scripts": [
    {
      "matches": ["*://www.bilibili.com/*"],
      "css": ["style.css"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["storage"]
}